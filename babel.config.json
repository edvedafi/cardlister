{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript",
    "ts-jest/presets/default-esm"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.m?[tj]sx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
